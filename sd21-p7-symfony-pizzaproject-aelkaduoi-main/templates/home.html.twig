{# templates/pizza/home.html.twig #}
{% extends 'base.html.twig' %}

    {% block body %}


        {% for msg in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>
        {% endfor %}

    <div class="bg-dark" style="height: 25px;"></div>
    <nav class="navbar navbar-expand-md navbar-light " style="background-color: #E8395A;">
        <div class="container">
            <a class="navbar-brand ms-auto" href="{{ path('home') }}"><img src="{{ asset('img/logo.png') }}" alt="Logo" width="75"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('contact') }}"style=" font-size: 24px; text-transform: uppercase; font-weight: 700;">CONTACT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('login') }}"style=" font-size: 24px; text-transform: uppercase; font-weight: 700;">LOGIN</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <body style="background-color: #E22A2A;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 style="font-size: 200px; font-weight: 800; ">PIZZA</h1>
                <p style="font-size: 24px; font-weight: 600; margin-top: 50px;">We offer the best pizza in town, made with fresh ingredients and cooked to perfection.</p>
                <div class="d-flex justify-content-center mt-5">
                    <button class="btn  btn-lg" style="background-color: #fff; color: #000; text-transform: uppercase; font-weight: 800;">Bestel</button>
                </div>
            </div>
            <div class="col-lg-6 mt-5">
                <img src="img/pizza_banner.png" alt="Pizza" class="img-fluid">
            </div>
        </div>
    </div>

    <div class="mt-5 bg-dark py-4 text-white">
        <div class="container" style="margin-top: 20px">
            <div class="row">
                {% for pizza in category %}
                <div class="col-sm-4">
                    <div class="card mb-3 bg-transparent">
                        <img src="{{ pizza.img }}" class="card-img-top">
                        <div class="card-body">
                            <h4 class="card-title text-center display-4"><strong>{{ pizza.name }}</strong></h4>
                            <a href="{{ path('product_show', {id: pizza.id}) }}">bestel </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <body style="background-color: #E22A2A;">
    <div class="container text-center">
        <h1 class="font-family-flyer text-uppercase mt-5" style="font-family-flyer"> Openings Tijden</h1>
        <h2 class="font-family-flyer">Den Haag</h2>
        <div class="text-left mt-5">
            <h3 class="font-weight-bold text-uppercase">Monday - Sunday</h3>
            <p class="font-family-flyer">11am - 9pm</p>
        </div>
    </div>
    </body>
    <footer class="footer " style="background-color: #383838;">
        <div class="container text-white ">
            <div class="row ">
                <div class="col-md-4 col-sm-12 mt-5">
                    <h3>Contact Ons</h3>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-map-marker"></i> 2562St, Den haag</li>
                        <li><i class="fa fa-phone"></i> (06) 1893749283</li>
                        <li><i class="fa fa-envelope"></i> saparoos@pizza.com</li>
                    </ul>
                </div>
                <div class="col-md-4 col-sm-12 text-center mt-5">
                    <h3>Volg Ons </h3>
                    <div class="social ">
                        <a href="#" class="text-light "><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light "><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-light "><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-light "><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 text-center mt-5">
                    <h3>Onze Uuren </h3>
                    <ul class="list-unstyled">
                        <li><h4>maandag - vrijdag</h4></li>
                        <li>11:00  - 21:00 </li>
                        <li><h4>zaterdag - zondag</h4></li>
                        <li>12:00  - 4:00 </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}